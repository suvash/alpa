alpa = _{SOI ~ program ~ EOI }

program = { expr* }

expr = { number | symbol | sexpr | qexpr }

sexpr = { "(" ~ expr* ~ ")"}

qexpr = { "'(" ~ expr* ~ ")"}

symbol = { numbers_op | qexpr_op | qexprs_op | sexpr_op }
  numbers_op = { add | subtract | multiply | divide }
    add      = { "+" } // "जोड"
    subtract = { "-" } // "घटाऊ"
    multiply = { "*" } // "गुणन"
    divide   = { "/" } // "भाग"
  qexpr_op = { first | rest | len | eval }
    first = { "पहिलो" }
    rest = { "बाँकी" }
    len = { "वटा" }
    eval = { "बिस्तार" }
  qexprs_op = { cons | join }
    cons = { "निर्माण" }
    join = { "एकत्र" }
  sexpr_op = { quote }
    quote = { "उद्धरण" }

number = @{ ( "+" | "-" )? ~ '०'..'९'+ }


WHITESPACE = _{ " " | "\t" }